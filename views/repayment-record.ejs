<body>
    <h1>ðŸ“‹ Your Loan Repayment Records</h1>
    <% if (loans.length === 0) {%>
        <p>You have no loan records yet.</p>
    <%} else {%>
    <% loans.forEach(loan => {%>
        <div class="record">
            <p><strong>Loan Amount:</strong> â‚¦<%= loan.amount ? loan.amount.toLocaleString() : "N/A" %></p>
            <p><strong>Tenure:</strong> <%= loan.tenure || "N/A" %> days</p>
            <p><strong>Repayment Amount</strong> â‚¦<%= loan.totalAmount ? loan.totalAmount.toLocaleString() : "N/A" %></p>
            <p><strong>Due Dates:</strong></p>
            <ul>
                <% (loan.dueDates || []).forEach(date => {%>
                    <li><%= date %></li>
                <%}); %>
            </ul>
            <p class="status <%= loan.status %>"><strong>Status:</strong> <%= loan.status %></p>
        </div>
    <%}); %>
    <% } %>

    <%- include("partials/footer") %>
</body>

