    <style>
        body { 
            font-family: 'Segoe UI'; 
            background: #f9fff9; color: #333; 
            padding: 30px;
        }

        h1 {
            color: #1a7732;
            text-align: center;
        }

        .record {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            background: #fff;
        }

        .status {
            font-weight: bold;
